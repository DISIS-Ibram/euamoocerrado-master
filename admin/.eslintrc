{
  "globals": {
    // Put things like jQuery, etc
    "jQuery": true,
    "$": true
  },
  "env": {
    // I write for browser
    "browser": true,
    // in CommonJS
    "node": true
  },
  // To give ykiu an idea how to override rule options:
  "rules": {
    // Tons of rules you can use, for example...
    "quotes": [1, "single"],
    "no-unused-vars": ["warn", { "vars": "all", "args": "after-used" }]
  },
  "parser": "babel-eslint",
  "syntax_map": {
    "JavaScript (Babel)": "javascript"
  },
  "plugins": [
    "react"
  ],
  "extends": ["eslint:recommended", "plugin:react/recommended"]
}